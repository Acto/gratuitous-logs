<h2>Comment List</h2>
    <table>
        <tr>
            <th>Commentator</th>
            <th>Body</th>
            <th>Action</th>
        </tr>

        <% comments.each do |comment| %>
            <tr>
                <td><%= comment.commentator %></td>
                <td><%= simple_format comment.body %></td>
                <td><%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Can I Delete this Article?' } %></td>
            </tr>
        <% end %>
    </table>
