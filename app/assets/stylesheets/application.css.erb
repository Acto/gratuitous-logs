body{
  width: 100%;
  margin: 0 auto;
  background-color: #181818;
}

#container {
    xwidth: 96%;
    min-width: 760px;
    max-width: 1260px;
    xmargin: 20px auto;
    background-color: #181818;
    width: 80%;
    border: 1px solid #181818;
    margin: 0 auto;
    color: #ECEEF1;
}

#main {
  width: 100%;
  float: left;
  margin-right:-250px;
  color: #F5F5F5;
}

#main h1{
 color: #F5F5F5;
}

#main input[type="submit"], #main select  {
  color: #FF6860;
}

#main textarea{
  color: #181818;
  font-size: 15px;
}

#inner {
  margin-right: 250px;
}

#sub {
  width: 250px;
  float: right;
}

footer {
  clear: both;
  width: 100%; /* for IE6,7*/
  height: 50px;
  background: #DDD url('<%= asset_path("footer_01.png") %> ') repeat;
  padding: 10px 0 30px 0 ;
  size: 20px;
  color: white;
  text-align: center;
}

header h1 {
    xbackground-color: #0942a0;
    padding: 25px 30px;
    margin: 0px;
    color: #ffffff;
    font-size: 40pt;
}

ul#article-tags{
  padding: 0;
  margin: 0;
  background-color: #fff;
}
